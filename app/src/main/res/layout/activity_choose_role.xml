<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/doc_ban2"
    tools:context=".ChooseRole"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_30sdp"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/CV1"
                android:layout_height="@dimen/_200sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_200sdp"
                app:cardBackgroundColor="@color/white"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp">

                    <ImageView
                        android:id="@+id/btndevprofile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounddoctor"
                        android:padding="5dp"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btndevprofile"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="I'm a Provider"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        />
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btndevprofile"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:text="You can list your Medical Services,Clinics,Hospitals,Dispensary,Health Screening Center,Mobile Clinic"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_500sdp"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/CV2"
                android:layout_below="@+id/CV1"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp">

                    <ImageView
                        android:id="@+id/btndevprofile1"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/patrint"
                        android:padding="5dp"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btndevprofile1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="I'm a Patient"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        />
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btndevprofile1"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:text="Search for Medical Provider,book instantly to get Medical Help,Find a ride to a clinic,Find a nearby Medical Clinic"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cv"
            android:background="@drawable/medical1"></ImageView>
    </LinearLayout>-->

</ScrollView>
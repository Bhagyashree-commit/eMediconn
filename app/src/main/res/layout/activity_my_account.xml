<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_300"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/gradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp">


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/ivBack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/back_white"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:outlineSpotShadowColor="@color/blue_900"
                    app:civ_circle_background_color="@color/blue_900"
                    android:src="@drawable/userr"
                    android:id="@+id/ivProfile"
                    app:civ_border_width="@dimen/_2sdp"
                    app:civ_border_color="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/tvName"
                    android:textColor="@color/white"
                    android:text="Rashmi Dwivedi"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:id="@+id/tvPhone"
                    android:textColor="@color/white"
                    android:text="+918452639188"

                    android:textSize="@dimen/_11sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView

                    android:gravity="center"
                    android:id="@+id/tvEmail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:text=""
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rlEdit"
                    android:layout_marginLeft="@dimen/_130sdp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:background="@drawable/pencil_edit"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_16sdp" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">
                <TextView

                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="My Appointments"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_10sdp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/textView2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:id="@+id/tvAppointments"
                    android:layout_height="@dimen/_20sdp"
                    android:text="View All Appointments"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="My Prescriptions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_below="@+id/tv2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:id="@+id/tvViewAddress"
                    android:text="View All Prescriptions"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tvPolicies"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="My Wallet and Cards"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_10sdp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/tvPolicies"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="center_vertical"
                    android:text="View Details"
                    android:id="@+id/tvWallet"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13sdp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
               android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tvReviews"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="My Profile"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_10sdp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/tvReviews"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/tvViewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="View Profile"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

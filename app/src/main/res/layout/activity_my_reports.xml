<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Lab.MyReports">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/newgradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">
            <ImageView
                android:backgroundTint="@color/red_700"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Hinjewadi,Pune 4110057"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:backgroundTint="@color/yellow_700"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlsearchview"
            android:layout_marginTop="@dimen/_minus10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/capsule1">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/rlSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                >
                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/search1"
                    tools:ignore="VectorDrawableCompat"
                    app:tint="@color/black_trans" />

                <TextView
                    android:gravity="center_vertical"
                    android:hint="Search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/ivSearch"
                    android:background="@null"
                    android:textSize="@dimen/_12sdp"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/report_items"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Patient.otp_patient">
    <ImageView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/otpimage"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have sent You OTP to your Mobile Number for Verification"
            android:gravity="center"
            android:textColor="@color/black_trans"
            android:padding="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp" ></TextView>



        <LinearLayout
            android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp"
           android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextone_one"
        android:layout_width="@dimen/_40ssp"
        android:layout_height="@dimen/_30sdp"
        android:inputType="number"
        android:maxLength="1"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:background="@drawable/square_box"
        android:nextFocusRight="@+id/editText_two">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTexttwo_two"
    android:layout_width="@dimen/_40ssp"
    android:layout_height="@dimen/_30sdp"
    android:inputType="number"
        android:layout_marginLeft="@dimen/_5sdp"
        android:background="@drawable/square_box"
        android:textAlignment="center"
        android:gravity="center_horizontal"
    android:maxLength="1"/>

    <EditText
        android:id="@+id/editTextthree_three"
    android:layout_width="@dimen/_40ssp"
    android:layout_height="@dimen/_30sdp"
    android:inputType="number"
        android:background="@drawable/square_box"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
    android:maxLength="1"/>


            <EditText
                android:id="@+id/editTextfour_four"
                android:layout_width="@dimen/_40ssp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/square_box"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                />
            <EditText
                android:id="@+id/editTextfive_five"
                android:layout_width="@dimen/_40ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/square_box"
                android:textAlignment="center"
                android:gravity="center_horizontal"

                />
            <EditText
                android:id="@+id/editTextsix_six"
                android:layout_width="@dimen/_40ssp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:inputType="number"
                android:textAlignment="center"
                android:background="@drawable/square_box"
                android:maxLength="1"
                android:gravity="center_horizontal" />


</LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newgradient"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Submit"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/otpsubmit"></Button>

    </LinearLayout>

</LinearLayout>
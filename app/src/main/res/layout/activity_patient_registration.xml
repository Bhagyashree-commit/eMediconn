<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:adjustViewBounds="true"
android:background="@drawable/mobile"
    tools:context=".Patient.PatientRegistration">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="@dimen/_110sdp"
    android:layout_height="@dimen/_110sdp"
  android:layout_marginLeft="@dimen/_160sdp"
    android:layout_marginTop="@dimen/_90sdp"
    android:background="@drawable/circlelogo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|left"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/blue_800"
            android:textStyle="bold"
        android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"></TextView>

        <LinearLayout
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black_trans"
                android:hint="  User Full Name">

                <EditText
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:inputType="textCapWords"
                    android:drawableLeft="@drawable/per"
                    android:id="@+id/edit_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif-condensed"
                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black_trans"
                android:hint="  Mobile Number">


                <EditText
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:textSize="@dimen/_15sdp"
                    android:maxLength="10"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/phone"
                    android:id="@+id/edit_mobilenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="sans-serif-condensed"
                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black_trans"
                app:passwordToggleEnabled="true"
                android:hint="  Password">

                <EditText
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:drawableStart="@drawable/password"
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:drawableLeft="@drawable/password" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:text="Create Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_registepaitent"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ffffff"
            android:background="@drawable/gradient"
            ></Button>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_25sdp"
            android:gravity="center"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already a Member ?"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black_trans"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_existinguser"
                android:text="Sign In"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/red_900"

                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>
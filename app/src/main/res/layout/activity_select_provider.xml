<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_50"
    android:layout_height="match_parent"
    tools:context=".SelectProvider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_175sdp"
            android:layout_height="@dimen/_90sdp"
            android:visibility="gone"
            android:src="@drawable/emedican"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who You Are?"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RL1"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_25sdp">


            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="vertical"
                android:elevation="@dimen/_20sdp"
                android:weightSum="0.7"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/LL1">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/doct"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOCTOR"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"></TextView>

            </LinearLayout>

            <View style="@style/Divider.Vertical"/>

            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="vertical"
                android:elevation="@dimen/_20sdp"
                android:weightSum="0.3"
                android:id="@+id/LL2"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_toRightOf="@+id/LL1">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/hospiitt"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLINIC/HOSPITAL"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"></TextView>

            </LinearLayout>


        </LinearLayout>
        <View style="@style/Divider.Horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RL2"
            android:layout_marginTop="@dimen/_25sdp">

            <LinearLayout
                android:id="@+id/LL3"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:elevation="@dimen/_20sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/amb"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="AMBULANCE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"></TextView>

            </LinearLayout>
            <View style="@style/Divider.Vertical"/>

            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="vertical"
                android:elevation="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"

                android:id="@+id/LL4"
                android:layout_toRightOf="@+id/LL3">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/lbo"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LABORATORY"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"></TextView>

           </LinearLayout>


        </LinearLayout>
        <View style="@style/Divider.Horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RL3"
            android:layout_marginTop="@dimen/_25sdp">

            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="vertical"
                android:elevation="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:id="@+id/LL5">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/pharm"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHARMACY"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"></TextView>
            </LinearLayout>

            <View style="@style/Divider.Vertical"/>
            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="vertical"
                android:elevation="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"

                android:id="@+id/LL6"
                android:layout_toRightOf="@+id/LL5">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/insu"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INSURANCE"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"></TextView>
            </LinearLayout>


        </LinearLayout>
        <View style="@style/Divider.Horizontal"/>
    </LinearLayout>
</ScrollView>
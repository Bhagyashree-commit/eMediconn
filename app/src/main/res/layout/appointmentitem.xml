<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivPatientImage"
                    android:outlineSpotShadowColor="@color/blue_900"
                    app:civ_circle_background_color="@color/blue_900"
                    android:src="@drawable/doctrrrr"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rashmi Dwivedi"
                            android:textColor="@color/black_trans"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivCall"
                            android:src="@drawable/ic_baseline_phone_24"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"/>

                    </RelativeLayout>

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_marginTop="@dimen/_3sdp"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_30sdp">



                       <TextView
                           android:id="@+id/tvDate"
                           android:drawableLeft="@drawable/ic_baseline_date_range_24"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:drawablePadding="@dimen/_5sdp"
                           android:text="22 May 2019"
                           android:textColor="@color/black_trans"
                           android:textSize="@dimen/_12sdp"
                           />

                       <TextView
                           android:id="@+id/tvTime"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:drawableLeft="@drawable/ic_baseline_access_time_24"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:drawablePadding="@dimen/_5sdp"
                           android:text="10:30 AM"
                           android:textColor="@color/black_trans"
                           android:textSize="@dimen/_12sdp"
                            />

                   </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rectangle_green"
                    android:layout_weight="1"
                    android:id="@+id/tvAccept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:layout_below="@+id/view"
                    android:text="Accept"
                    android:textColor="@color/green_600"
                    android:textSize="@dimen/_11sdp"
                    android:layout_toLeftOf="@+id/view4"
                    android:layout_toStartOf="@+id/view4"
                    />
                <TextView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/rectangle_red"
                    android:layout_weight="1"
                    android:id="@+id/tvReject"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:layout_below="@+id/view"
                    android:text="Reject"
                    android:textColor="@color/red_900"
                    android:textSize="@dimen/_11sdp"
                    android:layout_toLeftOf="@+id/view4"
                    android:layout_toStartOf="@+id/view4"
                    />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
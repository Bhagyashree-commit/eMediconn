<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10sdp"
    >

    <RelativeLayout
        android:layout_marginRight="@dimen/_10sdp"
       android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:maxLines="2"
            android:text="Master Full Body Health Checkup-Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_cancel_24"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
       android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:src="@drawable/pathalogy"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_45sdp"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_11sdp"
                android:text="Lab Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:text="Thyocare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/grey_400"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

    <TextView
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_gravity="left"
        android:textColor="@color/black_trans"
        android:textSize="@dimen/_12sdp"
        android:maxLines="2"
        android:text="Test Include: 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="\u25A0 Lipid Profile "
        android:textColor="@color/black_trans"
        android:textSize="@dimen/_12sdp"
        />

    <TextView
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="\u25A0 LFT(liver function test) "
        android:textColor="@color/black_trans"
        android:textSize="@dimen/_12sdp"
        />
    <TextView
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="\u25A0 KFT(Kidney function test) "
        android:textColor="@color/black_trans"
        android:textSize="@dimen/_12sdp"
        />

    <TextView
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Book Now"
        android:background="@color/green_600"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:id="@+id/linear1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imageView2e"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/shape_bg_incoming_bubble"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:inputType="textMultiLine"
               android:padding="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text=" Hi Rashmi ,Welcome to e-Medicon.I am DR Prasad and I am gonna handle your case Today.Please be available at 6:00PM."
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:background="@drawable/shape_bg_outgoing_bubble"
            android:inputType="textMultiLine"
            android:padding="@dimen/_10sdp"
            android:paddingRight="10dp"
            android:text="Hello Doctor!!"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/profile" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linear3"
      >
        <ImageView
            android:id="@+id/imageView2f"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/profile" />

        <LinearLayout

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_150sdp">
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:background="@drawable/shape_bg_outgoing_bubble"
            android:inputType="textMultiLine"
            android:padding="@dimen/_10sdp"
            android:paddingRight="10dp"
            android:text="Thanks"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            tools:ignore="RtlCompat" />

        <ImageView

            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/profile" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linear4">
        <RelativeLayout
            android:paddingRight="@dimen/_18sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_150sdp">
            <ImageView
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample"
                />

            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/profile" />
    </LinearLayout>
</LinearLayout>






<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardMaxElevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:weightSum="2"
            android:layout_height="@dimen/_130sdp">

            <LinearLayout
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/ivProviderImage"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/doctrrrr"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"/>
            </LinearLayout>

            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:text="Dr. Satish Chandra"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black_trans"
                    android:text="General Physician"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black_trans"
                    android:text="Hinjewadi"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/ratingbar"
                        android:progressTint="@color/orange_400"
                        style="?android:attr/ratingBarStyleSmall"
                        android:rating="3.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        />

                    <TextView
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/grey_900"
                        android:text="35 Years Exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

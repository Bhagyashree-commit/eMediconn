<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.ui.EstablishmentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/newgradient">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/backbutton"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital/Clinic Details"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="  Hospital Type"
                android:drawableLeft="@drawable/hosp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="sans-serif-condensed"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/ch_own"
                android:text="Own"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/ch_visit"
                android:text="Visit"
                android:layout_toRightOf="@+id/ch_own"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content"></CheckBox>
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:weightSum="2"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_weight="0.8"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="  Hospital Name"
                android:drawableLeft="@drawable/hosp"
                android:id="@+id/etcontractor_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"

                />
            <EditText
                android:layout_weight="1.2"
                android:maxLines="1"
                android:id="@+id/et_hospname"
                android:layout_width="match_parent"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"

                />

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_weight="0.8"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:text="  City"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/city"
                android:id="@+id/etcontractor_username1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"

                />
            <EditText
                android:layout_weight="1.2"
                android:maxLines="1"
                android:id="@+id/et_hospcity"
                android:layout_width="match_parent"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"

                />

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_weight="0.8"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:text="  Locality"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/loc"
                android:id="@+id/etcontractor_username2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"

                />
            <EditText
                android:layout_weight="1.2"
                android:maxLines="1"
                android:id="@+id/et_hosplocality"
                android:layout_width="match_parent"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"

                />

        </LinearLayout>

        <Button
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Continue"
            android:id="@+id/btn_continuehospdetails"
            android:textColor="@color/white"
            android:background="@drawable/gradient"></Button>
    </LinearLayout>
</FrameLayout>